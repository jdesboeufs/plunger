{
  "name": "plunger",
  "version": "3.2.1",
  "description": "Powerful link analyzer",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/geodatagouv/plunger"
  },
  "author": "Jérôme Desboeufs <jerome.desboeufs@data.gouv.fr>",
  "license": "MIT",
  "scripts": {
    "test": "jest --detectOpenHandles"
  },
  "files": [
    "lib/",
    "index.js"
  ],
  "dependencies": {
    "bluebird": "^3.5.1",
    "chalk": "^2.3.2",
    "content-disposition": "^0.5.2",
    "content-type": "^1.0.2",
    "debug": "^4.0.1",
    "execa": "^1.0.0",
    "feedparser": "^2.2.9",
    "file-type": "^10.2.0",
    "got": "^9.3.0",
    "hasha": "^3.0.0",
    "htmlparser2": "^3.9.2",
    "lerna-changelog": "^0.8.2",
    "mime-types": "^2.1.18",
    "mississippi": "^3.0.0",
    "normalize-url": "^4.0.0",
    "read-chunk": "^3.0.0",
    "rfc2047": "^2.0.1",
    "rimraf": "^2.6.1",
    "type-is": "^1.6.16"
  },
  "devDependencies": {
    "codecov": "^3.0.0",
    "finalhandler": "^1.1.1",
    "jest": "^23.5.0",
    "jest-junit": "^6.0.1",
    "serve-static": "^1.13.2",
    "test-listen": "^1.1.0",
    "xo": "^0.24.0"
  },
  "engines": {
    "node": ">=8.x"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__helpers__/",
      "/__fixtures__/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "output": "reports/tests/junit.xml"
        }
      ]
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/**/*.js",
      "index.js"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "forceExit": true
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "overrides": [
      {
        "files": "__tests__/**/*.js",
        "env": [
          "jest"
        ]
      }
    ]
  },
  "changelog": {
    "cacheDir": ".changelog",
    "labels": {
      "bug": ":bug: Bug Fix",
      "build": ":building_construction: Build Process",
      "cleanup": ":shower: Cleanup",
      "documentation": ":memo: Documentation",
      "enhancement": ":rocket: Enhancement",
      "performance": ":racehorse: Performance",
      "security": ":policeman: Security"
    },
    "repo": "geodatagouv/plunger"
  }
}
